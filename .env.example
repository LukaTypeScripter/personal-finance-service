# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=personal_finance

# Application
PORT=3000
NODE_ENV=development

# GraphQL
GRAPHQL_PLAYGROUND=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Exchange Rate API Configuration
# API URL for fetching real-time exchange rates (kursi.ge)
EXCHANGE_RATE_API_URL=https://api.kursi.ge:8080/api/public/currencies
# Cache time-to-live in milliseconds (default: 3600000 = 1 hour)
EXCHANGE_RATE_CACHE_TTL=3600000
# API timeout in milliseconds (default: 5000 = 5 seconds)
EXCHANGE_RATE_API_TIMEOUT=5000
